        <link rel="stylesheet" href="../CSS/header.css">
        <link rel="stylesheet" href="../CSS/createListing.css">

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="../JS/createListing.js"></script>
    </head>
    <body>
        <header id="header">
            <a href="#" id="mainLink">CONNECT VOLUNTEERS</a>
            <nav>
                <ul class="nav_links">
                    <li><a href="#">CONTACT</a></li>
                    <li><a href="#">JOIN</a></li>
                    <li><a href="#">ABOUT</a></li>
                    <li><a href="#">SEARCH</a></li>
                </ul>
            </nav>
        </header>
        
        <div class="mainContainer">
            <div class="cat hiddenElement">
                <div class="title">Choose your Catagories</div>

                <div class = "SelectableCats">
                    <div class="iconGroup">
                        <img class = "icon" src="../IMG/Hands with Heart 2.svg" alt="">
                        <div class="catName">Advocacy</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/mouse logo 2.svg" class="icon">
                        <div class="catName">Computing</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/community logo 2.svg" alt="" class="icon">
                        <div class="catName">Community</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/education logo 2.svg" alt="" class="icon">
                        <div class="catName">Education</div>
                    </div>
                    <div class="iconGroup">
                        <img class = "icon" src="../IMG/Hands with Heart 2.svg" alt="">
                        <div class="catName">Advocacy</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/mouse logo 2.svg" class="icon">
                        <div class="catName">Computing</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/community logo 2.svg" alt="" class="icon">
                        <div class="catName">Community</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/education logo 2.svg" alt="" class="icon">
                        <div class="catName">Education</div>
                    </div>
                    <div class="iconGroup">
                        <img class = "icon" src="../IMG/Hands with Heart 2.svg" alt="">
                        <div class="catName">Advocacy</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/mouse logo 2.svg" class="icon">
                        <div class="catName">Computing</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/community logo 2.svg" alt="" class="icon">
                        <div class="catName">Community</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/education logo 2.svg" alt="" class="icon">
                        <div class="catName">Education</div>
                    </div>
                    <div class="iconGroup">
                        <img class = "icon" src="../IMG/Hands with Heart 2.svg" alt="">
                        <div class="catName">Advocacy</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/mouse logo 2.svg" class="icon">
                        <div class="catName">Computing</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/community logo 2.svg" alt="" class="icon">
                        <div class="catName">Community</div>
                    </div>
                    <div class="iconGroup">
                        <img src="../IMG/education logo 2.svg" alt="" class="icon">
                        <div class="catName">Education</div>
                    </div>
                </div>
            </div>
            <div class="desc hiddenElement">
                <div class="title">Describe the Listing</div>
                <div class="wrapper">
                    <textarea id="describtion" cols="30" rows="10"></textarea>
                </div>
            </div>
            <div class="reqAndSkills hiddenElement">
                <div class="title" id = "requirementsSkills">What are the Listing's Requirements and Skills</div>
                <div class="reqAndSkillsTitle">Skills</div>
                <div class="wrapper">
                    <textarea id="skills" cols="30" rows="10"></textarea>
                </div>
                <div class="reqAndSkillsTitle">Requirements</div>
                <div class="wrapper">
                    <textarea id="requirements" cols="30" rows="10"></textarea>
                </div>
            </div>
            <div class="otherFields hiddenElement">
                <div class="title">Some Basic Information About the Listing</div>
                <div class="basicInfo">
                    <div class="generalTitle">What is the Title of the Oppurtunity</div>
                    <input type="text" name="" id="opportunityTitle" class="generalInput">
                    <div class="generalTitle">When will the Volunteering Happen</div>
                    <input type="text" name="" id="timeForVolunteering" class="generalInput">
                    <div class="generalTitle">Where will the Volunteering Happen</div>
                    <input type="text" name="" id="placeForVolunteering" class="generalInput">
                    <div class="generalTitle">How Long will this Opportunity Last</div>
                    <input type="number" name="" id="generalInputNum" class="generalInput">
                    <select name="" id="time-select">
                        <option value="weeks">Weeks</option>
                        <option value="months">Months</option>
                        <option value="years">Years</option>
                        <option value="indefinatly">Indefinitely</option>
                    </select>   
                    
                    <div class="generalTitle">How Long will the Volunteering Take</div>
                    <div>between <input type="number" id="minHoursPerWeek" class="generalInputNum"> hours and <input type="number" id="maxHoursPerWeek" class="generalInputNum"> hours per week</div>
                    <div class="generalTitle">What Group of People is this best for</div>
                    <div class="bestForWrapper">
                        <div class="teens">
                            <label for="#over55">Teens</label>
                            <input type="checkbox" id="over55" class="generalInputBox">
                        </div>
                        <div class="18-55">
                            <label for="#18-55">18-55</label>
                            <input type="checkbox" id="over55" class="generalInputBox">
                        </div>
                        <div class="over55">
                            <label for="#over55">Over 55</label>
                            <input type="checkbox" id="over55" class="generalInputBox">
                        </div>
                    </div>
                    <div class="generalTitle">How Many People are you looking for</div>
                    <input type="number" id="numOfvolunteers" class="generalInputNum">
                </div>
            </div>
        </div>

        <div class="fowardAndBack">   
            <button type="submit" class="prevButton">
                Previous
            </button>
            <button type="submit" class="nextButton">
                <div class="buttontext">Next</div>
                <img src="../IMG/whiteArrow2.svg" class="icon" id="whiteArrow">
            </button>
    
        </div> 
